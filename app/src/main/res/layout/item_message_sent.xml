<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:paddingTop="4dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/textview_message_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_message_sent"
        android:padding="12dp"
        android:text="Ukrainian Developer Built a $19.3 Billion App - Because Silicon Valley Was Too Ignorant to Do It"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap" />

    <TextView
        android:id="@+id/textview_message_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="Fri 3:30 PM"
        android:textColor="#BCBCBC"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/textview_message_subscription"
        app:layout_constraintTop_toBottomOf="@+id/textview_message_text" />

    <TextView
        android:id="@+id/textview_message_subscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="+9173XXX51000"
        android:textColor="#BCBCBC"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/textview_message_text"
        app:layout_constraintTop_toBottomOf="@+id/textview_message_text" />
</androidx.constraintlayout.widget.ConstraintLayout>